<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rmp.cardPage2"
    android:background="@drawable/card2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#54000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:alpha="0.8"
            android:background="#000000">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:layout_marginStart="61dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/font_ubuntu"
                android:gravity="center_vertical"
                android:text="Главная"
                android:onClick="startActivity"
                android:textColor="#F045FF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="9dp"
                android:onClick="startActivity"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/font_ubuntu"
                android:text="Галерея"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:text="Остров \n Мадагаскар"
            android:fontFamily="@font/font_exo2"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="30dp"
            android:text="По мнению путешественников Мадагаскар представляет собой «континент в миниатюре»"
            android:lineSpacingExtra="10dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/font_ubuntu"
            android:textSize="22sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/font_ubuntu"
            android:onClick="SecondPageActivity"
            android:padding="15dp"
            android:text="узнать новое"
            android:textSize="15sp"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="165dp"
                android:layout_marginTop="35dp"
                app:srcCompat="@drawable/circle1" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="34dp"
                app:srcCompat="@drawable/circle2" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="35dp"
                app:srcCompat="@drawable/circle1" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>