<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rmp.cardPage6"
    android:background="@drawable/card6_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#54000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:alpha="0.8"
                android:background="#000000">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="80dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="61dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:gravity="center_vertical"
                    android:text="Главная"
                    android:onClick="startActivity"
                    android:textColor="#F045FF"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="9dp"
                    android:onClick="startActivity"
                    android:src="@drawable/icon" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="80dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:gravity="center_vertical"
                    android:text="Галерея"
                    android:textSize="20sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="600dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="250dp"
                    android:fontFamily="@font/font_exo2"
                    android:text="Ему отлично\nподойдет\nпоговорка о\nтом, что в\nДагестане\nвсё есть"
                    android:textAlignment="center"
                    android:textColor="#FDFDFD"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_exo2"
                    android:text="Дагестан"
                    android:textColor="#000000"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:lineSpacingExtra="7dp"
                    android:text="Республика Дагестан – самый южный регион России и крупнейший среди семи субъектов Северо-Кавказского федерального округа. Территория Дагестана простирается от побережья Каспийского моря до заснеженных вершин Большого Кавказа, и ни один из регионов страны не может сравниться с этой республикой в многоликости ландшафтов. Ошеломительные пейзажи Дагестана сотканы из глубоких каньонов и фантастических скал, барханов и полупустынь, озер и водопадов, горных массивов и песчаных морских пляжей."
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/card6_2" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_exo2"
                    android:text="Самые вкусные\nделикатесы"
                    android:textColor="#000000"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:lineSpacingExtra="7dp"
                    android:text="Самые распространенные национальные блюда — это чуду (тонкие пресные лепешки с начинкой, поджаренные на сухой сковороде), курзе (разновидность пельменей с разными начинками) и хинкал (кусочки варенного теста в бульоне, которые едят с мясом)."
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/card6_3" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="25dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/card6_4" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="25dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/card6_5" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Махачкала, столица"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/font_exo2"
                    android:textColor="#000000"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:lineSpacingExtra="7dp"
                    android:text="Махачкала — крупнейший город Северного Кавказа, столица республики Дагестан. Город-миллионник, яркий, колоритный и очень аутентичный, он отлично умеет сочетать традиции и современность."
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/card6_6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:background="#2C2C2C">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/font_ubuntu"
                        android:lineSpacingExtra="7dp"
                        android:text="Вернуться\nназад"
                        android:textColor="#FFEB3B"
                        android:onClick="page3Activity"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="#FFEB3B"
                        android:bottomRightRadius="20dp"
                        android:fontFamily="@font/font_ubuntu"
                        android:padding="15dp"
                        android:text="Смотреть\nисточник"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_ubuntu"
                        android:lineSpacingExtra="7dp"
                        android:text="Следующее\nместо"
                        android:textAlignment="textEnd"
                        android:textColor="#FFEB3B"
                        android:onClick="page1Activity"
                        android:textSize="18sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>