<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rmp.cardPage4"
    android:background="@drawable/card4_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#54000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:alpha="0.8"
                android:background="#000000">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="80dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="61dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:gravity="center_vertical"
                    android:text="Главная"
                    android:onClick="startActivity"
                    android:textColor="#F045FF"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="9dp"
                    android:onClick="startActivity"
                    android:src="@drawable/icon" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="80dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:gravity="center_vertical"
                    android:text="Галерея"
                    android:textSize="20sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="600dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="430dp"
                    android:fontFamily="@font/font_exo2"
                    android:text="Остров для \n досуга и \n романтики"
                    android:textAlignment="center"
                    android:textColor="#FDFDFD"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_exo2"
                    android:text="Бора-Бора\nна таити"
                    android:textColor="#000000"
                    android:textSize="45sp"
                    android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font_ubuntu"
                android:lineSpacingExtra="7dp"
                android:text="Бора-Бора - небольшой остров Французской Полинезии в южной части Тихого океана, к северо-западу от Таити. Остров окружен коралловыми рифами, образующими лагуну, со множемтвом небольших островков (моту). Это место отлично подходит для плавания с аквалангом. Бора-Бора считается элитным курортом. Многие гостевые бунгало расположены на сваях прямо в воде. В центре острова на 727 метров возывшается потухший вулкан Отеману."
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="normal" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/card4_2" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_exo2"
                    android:text="Самые вкусные\nделикатесы"
                    android:textColor="#000000"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:lineSpacingExtra="7dp"
                    android:text="Таитянская кухня очень калоритная и яркая как и сам Таити. Чем же себя побаловать, приезжая на Таити – ну в первую очередь рыбными деликатесами- тунец, золотистый дорадо, ваху, морской попугай."
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/card4_3" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="25dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/card4_4" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="25dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/card4_5" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Коралловый\nАттол Тетиароа"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/font_exo2"
                android:textColor="#000000"
                android:textSize="45sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/font_ubuntu"
                android:lineSpacingExtra="7dp"
                android:text="Среди островов Французской Полинезии единственным коралловым атоллом является Тетиароа. По сути Тетиароа состоит из 13-ти небольших островков, расположенных вокруг центральной лагуны. Они находятся в 30 километрах от острова Муреа."
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="normal" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/card4_6" />

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="#2C2C2C">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:lineSpacingExtra="7dp"
                    android:text="Вернуться\nназад"
                    android:onClick="page1Activity"
                    android:textColor="#FFEB3B"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="#FFEB3B"
                        android:bottomRightRadius="20dp"
                        android:fontFamily="@font/font_ubuntu"
                        android:padding="15dp"
                        android:text="Смотреть\nисточник"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_ubuntu"
                        android:lineSpacingExtra="7dp"
                        android:text="Следующее\nместо"
                        android:textAlignment="textEnd"
                        android:textColor="#FFEB3B"
                        android:onClick="page2Activity"
                        android:textSize="18sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>