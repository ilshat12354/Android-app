<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rmp.cardPage5"
    android:background="@drawable/card5_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#54000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:alpha="0.8"
                android:background="#000000">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="80dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="61dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:gravity="center_vertical"
                    android:text="Главная"
                    android:onClick="startActivity"
                    android:textColor="#F045FF"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="9dp"
                    android:onClick="startActivity"
                    android:src="@drawable/icon" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="80dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:gravity="center_vertical"
                    android:text="Галерея"
                    android:textSize="20sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="600dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="430dp"
                    android:fontFamily="@font/font_exo2"
                    android:text="Остров для \n отдыха и \n романтики"
                    android:textAlignment="center"
                    android:textColor="#FDFDFD"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_exo2"
                    android:text="Мадагаскар"
                    android:textColor="#000000"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:lineSpacingExtra="7dp"
                    android:text="Мадагаскар – это невероятное островное государство, которое находится в Индийском океане и которое очень часто люди ассоциируют исключительно с Африканским континентом. А зря, ведь на самом деле Мадагаскар – это намного больше, ведь здесь живут люди с древнейшей историей, верой и традициями, а флора и фауна острова воистину уникальны. На Мадагаскаре нет шикарных отелей: это место для тех, кто ищет не роскошные номера, а новые впечатления, стопроцентную экзотику и экологию."
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/card5_2" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_exo2"
                    android:text="Самые вкусные\nделикатесы"
                    android:textColor="#000000"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:lineSpacingExtra="7dp"
                    android:text="Мадагаскарская кухня очень калоритная и яркая. Чем же себя побаловать, приезжая на Таити – ну в первую очередь Салат ро, Филе зебу, Китоза, Румазава и салат анана."
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="20dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/card5_3" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="25dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/card5_4" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="25dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/card5_5" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Каменный лес"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/font_exo2"
                    android:textColor="#000000"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/font_ubuntu"
                    android:lineSpacingExtra="7dp"
                    android:text="Каменный лес поражает своими остроконечными известняковыми шпилями и экзотическими обитателями. Национальный парк Цинги-де-Бемараха — это 667 квадратных километров удивительной природы: от подземных пещер до известняковых образований высотой 70 метров, которые были размыты сильными дождями и грунтовыми водами в игольчатые породы."
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/card5_6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:background="#2C2C2C">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/font_ubuntu"
                        android:lineSpacingExtra="7dp"
                        android:text="Вернуться\nназад"
                        android:textColor="#FFEB3B"
                        android:onClick="page2Activity"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="#FFEB3B"
                        android:bottomRightRadius="20dp"
                        android:fontFamily="@font/font_ubuntu"
                        android:padding="15dp"
                        android:text="Смотреть\nисточник"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_ubuntu"
                        android:lineSpacingExtra="7dp"
                        android:text="Следующее\nместо"
                        android:textAlignment="textEnd"
                        android:textColor="#FFEB3B"
                        android:onClick="page3Activity"
                        android:textSize="18sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>