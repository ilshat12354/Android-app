<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rmp.starting"
    android:background="@drawable/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#54000000"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_margin="60dp"
            app:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Путешествие в\n"
            android:textAlignment="center"
            android:textColor="#FDFDFD"
            android:fontFamily="@font/font_exo2"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="30dp"
            android:text="этот сайт для мечтателей,\n которые хотят побывать\n там, где еще не были"
            android:textAlignment="center"
            android:fontFamily="@font/font_ubuntu"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/font_ubuntu"
            android:onClick="startActivity"
            android:padding="15dp"
            android:text="Посмотреть мир"
            android:textSize="15sp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>
</RelativeLayout>